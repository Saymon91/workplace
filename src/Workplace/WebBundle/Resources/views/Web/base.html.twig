{% import "WorkplaceWebBundle:Web:navigation.html.twig" as nav %}
{% set current = app.request.attributes.get('_route') %}
{% set title = i18n[main_menu[current]] | default(main_menu[current]) | default('') %}
<!DOCTYPE html>
<html lang="{{ locale | default('ru_RU') }}">
{% block head %}
<head>
    {% block meta %}
    <meta charset="UTF-8" content="text/html">
    <meta http-equiv="Content-Security-Policy" name="default-src 'self'">
    {% endblock %}

    {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('workplaceweb/css/main.css') }}">
    {% endblock %}

    {% block scripts %}
    {% endblock %}

    <title>{{ current | default('') }}</title>
</head>
{% endblock %}
{% block body %}
<body>
{% block page %}
    {% block header %}
    <header>
        <div class="blur"></div>
        <div class="content">
            <div class="header-background">
                <div class="header-left-decor"> </div>
                <div class="header-right-decor"> </div>
            </div>
            <div class="header-content">
                {% block header_content %}
                    <span>{{ title | default('') }}</span>
                {% endblock %}
            </div>
        </div>
    </header>
    {% endblock %}
    {% block navigation %}
        {{ nav.nav('main-menu', 'main-menu blur', main_menu, i18n) }}
    {% endblock %}
    {% block article %}
    <article>{% block content %}{% endblock %}</article>
    {% endblock %}
    {% block footer %}
    <footer>{% block footer_content %}{% endblock %}</footer>
    {% endblock %}
{% endblock %}
</body>
{% endblock %}
</html>