{% import "WorkplaceWebBundle:Web:navigation.html.twig" as nav %}
<!DOCTYPE html>
<html lang="{{ locale | default('ru_RU') }}">
{% block head %}
<head>
    {% block meta %}
    <meta charset="UTF-8" content="text/html">
    <meta http-equiv="Content-Security-Policy" name="default-src 'self'">
    {% endblock %}

    {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
    {% endblock %}

    {% block scripts %}
    {% endblock %}

    <title>{{ title | default('') }}</title>
</head>
{% endblock %}
{% block body %}
<body>
{% block page %}
    {% block header %}
    <header>
        {% block header_content %}
        <span>{{ title | default('') }}</span>
        {% endblock %}
    </header>
    {% endblock %}
    {% block navigation %}
        {{ nav.nav('main-menu', 'main-menu', main_menu) }}
    {% endblock %}
    {% block article %}
    <article>{% block content %}{% endblock %}</article>
    {% endblock %}
    {% block footer %}
    <footer>{% block footer_content %}{% endblock %}</footer>
    {% endblock %}
{% endblock %}
</body>
{% endblock %}
</html>